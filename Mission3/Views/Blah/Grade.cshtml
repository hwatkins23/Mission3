@model GradeModel;

<!--this is the form to input grade information-->
<h2>Calculate Your Grade</h2>
<form method="post">
    <label>Assignments</label>
    <input id="assignment" asp-for="assignments" /><br />
    <label>Group Projects</label>
    <input id="groupProject" asp-for="groupProjects"/><br />
    <label>Quizzes</label>
    <input id="quiz" asp-for="quizzes"/><br />
    <label>Exams</label>
    <input id="exam" asp-for="exams"/><br />
    <label>INTEX</label>
    <input id="intex" asp-for="intex"/><br />
    <input id="calculate" type="submit" value="Calculate Grade" />
    <div asp-validation-summary="All"></div>
</form>

